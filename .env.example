# MongoDB connection (use MongoDB Atlas URI for external DB)
MONGO_URI=mongodb://localhost:27017/certificates

# JWT secret for both admin and student tokens
JWT_SECRET=replace_with_a_secure_random_string

# Blockchain / Ethereum RPC (optional)
ETH_RPC=https://sepolia.infura.io/v3/your-project-id
ETH_PRIVATE_KEY=your-private-key
USE_REAL_BLOCKCHAIN=false

# Server port (optional)
PORT=5000

# Optional email settings (for password reset flow)
# EMAIL_HOST=smtp.example.com
# EMAIL_PORT=587
# EMAIL_USER=your-user
# EMAIL_PASS=your-pass
